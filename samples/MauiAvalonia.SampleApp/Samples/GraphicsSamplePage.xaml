<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAvalonia.SampleApp.GraphicsSamplePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Graphics">

    <VerticalStackLayout Padding="24,22,24,32" Spacing="18">
        <Label
            Text="GraphicsView + DrawingView"
            FontSize="22"
            FontAttributes="Bold" />

        <Label
            Text="The drawable leases the Avalonia Skia surface, so painting here mirrors MAUI.Graphics behavior on Android/iOS."
            FontSize="13"
            TextColor="#555" />

        <Border
            Stroke="#D2D2F4"
            StrokeShape="RoundRectangle 16"
            StrokeThickness="2"
            BackgroundColor="#FBFBFF"
            Padding="12">
            <GraphicsView
                x:Name="SampleGraphicsView"
                HeightRequest="280"
                Drawable="{Binding Drawable}" />
        </Border>

        <VerticalStackLayout Spacing="10">
            <Label Text="Rotation" />
            <Slider Minimum="-180" Maximum="180" Value="{Binding Drawable.State.Rotation}" ValueChanged="OnRotationChanged" />

            <Label Text="Progress" />
            <Slider Minimum="0" Maximum="1" Value="{Binding Drawable.State.Progress}" ValueChanged="OnProgressChanged" />

            <Label Text="Stroke thickness" />
            <Slider Minimum="2" Maximum="8" Value="{Binding Drawable.State.StrokeThickness}" ValueChanged="OnThicknessChanged" />
        </VerticalStackLayout>

        <Button Text="Randomize colors" Clicked="OnRandomizeClicked" />
    </VerticalStackLayout>

</ContentPage>
