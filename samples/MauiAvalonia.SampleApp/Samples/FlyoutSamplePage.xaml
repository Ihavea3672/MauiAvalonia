<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAvalonia.SampleApp.FlyoutSamplePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tabs + Flyout">

    <ScrollView>
        <VerticalStackLayout Padding="24,22,24,32" Spacing="18">
            <Label
                Text="Flyout integration"
                FontAttributes="Bold"
                FontSize="22"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="This sample lives under a FlyoutItem so we can validate Avalonias drag rectangles, menu accelerators, and Shell tab sync."
                FontSize="13"
                TextColor="#555" />

            <HorizontalStackLayout Spacing="12">
                <Button Text="Show flyout" Clicked="OnShowFlyout" />
                <Button Text="Hide flyout" Clicked="OnHideFlyout" />
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12" VerticalOptions="Start">
                <Label
                    Grid.Column="0"
                    Text="Lock flyout (docked navigation)"
                    VerticalTextAlignment="Center" />
                <Switch
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    IsToggled="{Binding IsFlyoutLocked}"
                    Toggled="OnFlyoutLockToggled" />
            </Grid>

            <CollectionView
                ItemsSource="{Binding FlyoutEntries}"
                SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 8" Stroke="#DADADA" Padding="14,10">
                            <VerticalStackLayout Spacing="4">
                                <Label
                                    Text="{Binding Title}"
                                    FontAttributes="Bold"
                                    FontSize="15" />
                                <Label
                                    Text="{Binding Description}"
                                    FontSize="12"
                                    TextColor="#555" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
