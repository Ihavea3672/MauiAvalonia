<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAvalonia.SampleApp.ShellNavigationDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Navigation Detail">

    <VerticalStackLayout Padding="24,40,24,24" Spacing="16">
        <Label
            x:Name="TitleLabel"
            Text="Shell route detail"
            FontAttributes="Bold"
            FontSize="22" />

        <Label
            x:Name="MessageLabel"
            Text="Payload"
            FontSize="16"
            TextColor="#444" />

        <Button
            Text="Navigate back"
            HorizontalOptions="Start"
            Clicked="OnBackClicked" />
    </VerticalStackLayout>

</ContentPage>
