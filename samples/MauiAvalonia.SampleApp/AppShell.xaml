<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAvalonia.SampleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAvalonia.SampleApp"
    Title="MauiAvalonia.SampleApp"
    FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid Padding="12,28,12,20" RowDefinitions="Auto,Auto" BackgroundColor="#4C4C9D">
            <Label
                Text="MauiAvalonia Sample Matrix"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="White" />
            <Label
                Grid.Row="1"
                Text="Shell navigation • Tabs • Flyout • Data grids • Drag &amp; drop • Graphics"
                FontSize="12"
                TextColor="#E2E2FF"
                Margin="0,6,0,0" />
        </Grid>
    </Shell.FlyoutHeader>

    <TabBar Route="playground-tabs">
        <ShellContent
            Title="Home"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Overview"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:TabsOverviewPage}" />

        <ShellContent
            Title="Tasks"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:TabsTasksPage}" />

        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate local:TabsNotesPage}" />
    </TabBar>

    <FlyoutItem
        Route="sample-matrix"
        Title="Sample Matrix"
        FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Matrix"
            Route="matrix-overview"
            ContentTemplate="{DataTemplate local:SampleMatrixPage}" />
        <ShellContent
            Title="Shell navigation"
            Route="shell-navigation"
            ContentTemplate="{DataTemplate local:ShellNavigationSamplePage}" />
        <ShellContent
            Title="Tabs + flyout"
            Route="flyout-sample"
            ContentTemplate="{DataTemplate local:FlyoutSamplePage}" />
        <ShellContent
            Title="Data grid"
            Route="data-grid-sample"
            ContentTemplate="{DataTemplate local:DataGridSamplePage}" />
        <ShellContent
            Title="Drag &amp; drop"
            Route="drag-drop-sample"
            ContentTemplate="{DataTemplate local:DragDropSamplePage}" />
        <ShellContent
            Title="Graphics"
            Route="graphics-sample"
            ContentTemplate="{DataTemplate local:GraphicsSamplePage}" />
    </FlyoutItem>

</Shell>
